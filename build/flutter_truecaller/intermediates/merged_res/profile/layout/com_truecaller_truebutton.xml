<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/com_truecaller_truebutton_height"
    android:layout_margin="@dimen/com_truecaller_truebutton_margin"
    android:background="@drawable/com_truecaller_truebutton_background">

    <TextView
        android:id="@+id/com_truecaller_truebutton_text"
        style="@style/com_truecaller_truebutton_text_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/com_truecaller_truebutton_text_auto_fill" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/tc_logo"
        android:padding="@dimen/com_truecaller_truebutton_padding"
        android:scaleType="center"
        android:src="@drawable/com_truecaller_icon" />

</RelativeLayout>
